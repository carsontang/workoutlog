<% provide(:title, "| Forgot password") %>
<div class="row signin-box">
<%= devise_error_messages! %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "form-signin", :method => :post }) do |f| %>
  <h3 class="form-heading">Forgot your password?</h2>
  <%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "Email" %>
  <div><%= f.submit "Send me password reset", :class => "btn btn-large btn-info"  %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>