<h1>Listing exercise_sets</h1>

<table>
  <tr>
    <th>Exercise</th>
    <th>Number of reps</th>
    <th>Number of sets</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercise_sets.each do |exercise_set| %>
  <tr>
    <td><%= exercise_set.exercise %></td>
    <td><%= exercise_set.number_of_reps %></td>
    <td><%= exercise_set.number_of_sets %></td>
    <td><%= exercise_set.weight %></td>
    <td><%= link_to 'Show', exercise_set %></td>
    <td><%= link_to 'Edit', edit_exercise_set_path(exercise_set) %></td>
    <td><%= link_to 'Destroy', exercise_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

